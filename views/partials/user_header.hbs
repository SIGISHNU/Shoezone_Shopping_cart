<script>
	function getSearchProducts() {
		let text = document.getElementById('searchInput').value
		if (text.length > 0) {

			$.ajax({
				url: '/getSearchProducts/' + text,
				method: 'get',
				success: (response) => {
					document.getElementById('searchRsltErr').style.display = 'none'
					if (response.length > 0) {
						var result = []
						for (i = 0; i < response.length; i++) {
							result[i] = { name: response[i].name, id: response[i]._id }
						}


						var ul = document.getElementById('list')
						var aTag = []

						for (i = 0; i < result.length; i++) {
							aTag[i] = document.createElement('a')
							aTag[i].setAttribute('id', `${result[i].id}`)
							aTag[i].innerHTML = `${result[i].name}`
							aTag[i].href = `/single_view/${result[i].id}`

							$('#list').append(`<a href="${aTag[i]}" style="margin-left: 25px;"> <img src="/product_images/${result[i].id}__1.jpg"  style="height: 50px;float:left;border-radius:80px" alt="">${result[i].name}</a>`)
							$("#list").append(`<hr>`)
							$("#list").append(`<br>`)
						}


					} else {
						document.getElementById('list').innerHTML = ''
						document.getElementById('searchRsltErr').style.display = 'block'
						document.getElementById('searchRsltErr').innerHTML = '<span style="color:red;margin-left: -57px;">No items match your search</span>'
					}


				}
			})
		} else {
			document.getElementById('list').innerHTML = ''
			document.getElementById('searchRsltErr').style.display = 'block'
			document.getElementById('searchRsltErr').innerHTML = '<span style="color:red;margin-left: -57px;">Please enter any key to search</span>'
		}

	}
</script>