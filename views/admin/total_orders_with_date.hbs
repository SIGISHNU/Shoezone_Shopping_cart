<form class="add" action="/admin/total_orders_with_date" method="post">
    <div class="form-group2">

        <h3>Order list</h3>
        <br>


        <div class="form-group">
            <label for="exampleInputPassword1">Start date</label>
            <input type="date" name="startdate" class="form-control mt-2">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">End date</label>
            <input type="date" name="enddate" class="form-control mt-2">
        </div>



        <button type="submit" class=" btn btn-success">Submit</button>


    </div>
</form>

<!-- Simple Datatable start -->
<div class="card-box mb-30">
    <div class="pd-20">
        <div style="margin-left: 40%;">

        </div>
     
    </div>
    <div class="pb-20" id="download">
        <table class="data-table-export table stripe  hover nowrap">
            <thead>
                <tr>
                    <th class="table-plus datatable-nosort">No</th>
                    <th>Offer name</th>
                    <th>Catagory</th>

                    <th>Offer</th>
                    <th>Expire date</th>
                    <th></th>
                    <th></th>

                </tr>
            </thead>
            <tbody>


                {{#each newArray}}

                <tr>

                    <td>{{add @index '1'}}</td>
                    <td>{{this.delivaryDetails.name}}</td>

                    <td>{{this.delivaryDetails.mobile}}</td>


                    <td class="table-plus">{{this.delivaryDetails.address}}</td>

                    <td>{{this.paymentMethod}}</td>
                    <td>{{this.mode}}</td>
                    <td></td>






                </tr>
                {{/each}}




            </tbody>
        </table>
    </div>
</div>

<!-- Simple Datatable End -->


