<!-- Simple Datatable start -->
<div class="card-box mb-30">
    <div class="pd-20">
        <strong>
            <h2 class="text-blue h4">MANAGE OREDER</h2>
        </strong>
    </div>
    <div class="pb-20">
        <table class="data-table table stripe hover nowrap">
            <thead>
                <tr>
                    <th class="table-plus datatable-nosort">No</th>
                    <th>Image</th>

                    <th>Item</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th></th>
                    <th></th>
                    <th></th>

                </tr>
            </thead>
            <tbody>

                {{#each orderedproduct}}
                {{#eq this.mode "cart"}}
                {{#each this.product}}
                <tr>

                    <td>{{add @index '1'}}</td>

                    <td><img style="height: 50px;width: 50px;" src="/product_images/{{this.item}}__1.jpg">

                    </td>
                    <td class="table-plus">{{this.item}}</td>

                    <td>{{this.Price}}</td>
                    <td>{{this.quantity}}</td>
                    <td>
                        <div class="dropdown">

                            <button class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown" type="button"
                                id="dropdownMenuButton" aria-haspopup="true"
                                aria-expanded="false">{{this.status}}</button>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                <a class="dropdown-item "
                                    href="/admin/change_order_status?orderId={{../this._id}}&proId={{this.item}}&status=Placed"><i></i>
                                    Placed</a>
                                <a class="dropdown-item "
                                    href="/admin/change_order_status?orderId={{../this._id}}&proId={{this.item}}&status=Shipped"><i></i>
                                    Shipped</a>
                                <a class="dropdown-item "
                                    href="/admin/change_order_status?orderId={{../this._id}}&proId={{this.item}}&status=Pending"><i></i>
                                    Pending</a>
                                <a class="dropdown-item "
                                    href="/admin/change_order_status?orderId={{../this._id}}&proId={{this.item}}&status=Returned"><i></i>
                                    Returned</a>
                                <a class="dropdown-item"
                                    href="/admin/change_order_status?orderId={{../this._id}}&proId={{this.item}}&status=Delivered"><i></i>
                                    Delivered</a>
                                <a class="dropdown-item"
                                    href="/admin/change_order_status?orderId={{../this._id}}&proId={{this.item}}&status=Cancelled"><i></i>
                                    Cancelled</a>
                            </div>
                        </div>
                    </td>
                </tr>
                {{/each}}
                {{else}}

                <tr>

                    <td>{{add @index '1'}}</td>

                    <td><img style="height: 50px;width: 50px;" src="/product_images/{{this.proId}}__1.jpg">

                    </td>
                    <td class="table-plus">{{this.proId}}</td>

                    <td>{{this.Price}}</td>
                    <td>{{this.quantity}}</td>
                    <td>
                        <div class="dropdown">

                            <button class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown" type="button"
                                id="dropdownMenuButton" aria-haspopup="true"
                                aria-expanded="false">{{this.status}}</button>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                <a class="dropdown-item "
                                    href="/admin/change_order_status?orderId={{this._id}}&proId={{this.proId}}&status=Placed"><i></i>
                                    Placed</a>
                                <a class="dropdown-item "
                                    href="/admin/change_order_status?orderId={{this._id}}&proId={{this.proId}}&status=Shipped"><i></i>
                                    Shipped</a>
                                <a class="dropdown-item "
                                    href="/admin/change_order_status?orderId={{this._id}}&proId={{this.proId}}&status=Pending"><i></i>
                                    Pending</a>
                                <a class="dropdown-item"
                                    href="/admin/change_order_status?orderId={{this._id}}&proId={{this.proId}}&status=Delivered"><i></i>
                                    Delivered</a>
                                <a class="dropdown-item"
                                    href="/admin/change_order_status?orderId={{this._id}}&proId={{this.proId}}&status=Cancelled"><i></i>
                                    Cancelled</a>
                            </div>
                        </div>

                    </td>
                </tr>

                {{/eq}}
                {{/each}}

            </tbody>
        </table>
    </div>
</div>

